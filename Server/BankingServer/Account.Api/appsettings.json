{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "myContextCon": "server=.; database=AccountDb;Trusted_Connection=True;MultipleActiveResultSets=true",
    "myPersistenceCon": "Data Source=.;Initial Catalog=BankPersistence;Integrated Security=True",
    "NSB": "host=localhost"
  },
  "AllowedHosts": "*",
  "InitBalance": {
    "Balance": 100000
  }
,
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "myContextCon",
          "tableName": "Log",
          "autoCreateSqlTable": true
        }
      }
    ]
  }
}
